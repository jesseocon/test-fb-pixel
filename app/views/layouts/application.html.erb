        'https://connect.facebook.net/en_US/fbevents.js');
        fbq('init', '365253320592154');
        fbq('track', 'PageView');
      </script>
      <noscript><img height="1" width="1" style="display:none"
        src="https://www.facebook.com/tr?id=365253320592154&ev=PageView&noscript=1"
      /></noscript>
    <% end %>
<!-- End Facebook Pixel Code -->
    <%= javascript_include_tag 'application' %>
  </head>
  <body>
    <%= yield %>
  </body>
</html>
